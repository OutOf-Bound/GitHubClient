<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/userFrameTitleTV"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="@string/user_fragment_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userAvatarIV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userFrameTitleTV"
        app:srcCompat="@drawable/github_200"
        tools:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/userNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/h1_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/userAvatarIV"
        app:layout_constraintTop_toTopOf="@+id/userAvatarIV" />

</androidx.constraintlayout.widget.ConstraintLayout>