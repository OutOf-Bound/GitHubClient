<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/item_shape"
    android:elevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/userList_item_IV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/github_200" />

    <TextView
        android:id="@+id/userList_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="8"
        android:fontFamily="sans-serif-condensed"
        android:text="UserName"
        android:textColor="#000000"
        android:textSize="@dimen/item_name_text_size" />

    <LinearLayout
        android:id="@+id/user_smile_layout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_smile_IV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/smile_pockerface_300" />
    </LinearLayout>

</LinearLayout>